    # dmy_fh = open('dmy_file','w')
    # dmy_fh.write( 'Dummy dependency file created at %4d.%02d.%02d %02dh%02dm%02ds\n'%time.localtime()[0:6])
    # dmy_fh.close()
# 
# bldr = Builder(action=action)
# env.Append( BUILDERS = {'SubBuild' : bldr } )
# 
# env.SubBuild(srcs,tgts)

Return("runtests")

